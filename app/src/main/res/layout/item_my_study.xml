<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="10dp"
    android:elevation="5dp"
    android:background="@drawable/layout_study_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_study_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_my_study_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_my_study_msg"
        app:layout_constraintHorizontal_weight="3"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_study_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/tv_my_study_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_my_study_msg"
        app:layout_constraintLeft_toRightOf="@id/tv_my_study_title"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_my_study_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_study_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_my_study_date"
        app:layout_constraintTop_toBottomOf="@id/tv_my_study_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="14dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_study_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/tv_my_study_person"
        app:layout_constraintRight_toLeftOf="@id/tv_my_study_dday"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_my_study_title"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="bottom|right"
        android:paddingHorizontal="5dp"
        android:textSize="10dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_study_msg_cnt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@id/tv_my_study_date"
        app:layout_constraintTop_toBottomOf="@id/tv_my_study_date"
        android:background="@drawable/view_msg_cnt_border"
        android:gravity="top|right"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="12dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_my_study_dday"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_my_study_date"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/view_dday_border"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>