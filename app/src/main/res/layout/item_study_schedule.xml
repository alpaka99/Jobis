<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@null"

    android:background="@drawable/layout_study_border"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:padding="12dp"
    android:elevation="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/study_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="title"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/study_schedule_delete"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/fui_transparent"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:gravity="right"
            android:layout_gravity="top"
            android:text="x"
            android:textColor="@color/light_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/study_schedule_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/study_schedule_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="2021년 11월 16일"
            />
        <TextView
            android:id="@+id/study_schedule_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="시간"
            android:gravity="right"/>
    </LinearLayout>
</LinearLayout>